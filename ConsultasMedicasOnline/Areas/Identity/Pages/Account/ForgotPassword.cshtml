@page
@model ConsultasMedicasOnline.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu a senha - MedConsulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main Container with Glass Effect Background -->
<div class="min-h-screen pt-24 pb-12 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- Header Section with Modern Design -->
        <div class="text-center animate-fade-in">
            <div class="flex justify-center mb-6">
                <div class="relative group">
                    <div class="w-16 h-16 bg-gradient-to-r from-amber-500 to-orange-600 rounded-2xl flex items-center justify-center shadow-xl group-hover:shadow-2xl transition-all duration-300 transform group-hover:scale-105">
                        <i class="fas fa-key text-white text-2xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-r from-amber-400 to-orange-500 rounded-2xl blur opacity-30 group-hover:opacity-50 transition-opacity duration-300"></div>
                </div>
            </div>
            <h1 class="text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-slate-800 to-slate-600 mb-3">
                Esqueceu a senha?
            </h1>
            <p class="text-lg text-slate-600 max-w-sm mx-auto">
                Não se preocupe! Digite seu email e enviaremos instruções para redefinir sua senha
            </p>
        </div>

        <!-- Forgot Password Form with Glass Morphism -->
        <div class="bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-8 animate-fade-in">
            <form id="forgotPasswordForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl text-sm mb-6 hidden" id="validation-summary"></div>
                
                <!-- Email Field -->
                <div class="space-y-2">
                    <label asp-for="Input.Email" class="block text-sm font-semibold text-slate-700">
                        <i class="fas fa-envelope text-amber-500 mr-1"></i>
                        Email *
                    </label>
                    <div class="relative group">
                        <input asp-for="Input.Email" 
                               type="email"
                               class="w-full px-4 py-4 bg-white/50 border border-slate-200 rounded-xl focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-all duration-300 group-hover:bg-white/70 placeholder-slate-400 text-lg" 
                               placeholder="seu@email.com" 
                               autocomplete="email"
                               required />
                        <div class="absolute inset-y-0 right-0 pr-4 flex items-center">
                            <i class="fas fa-at text-slate-400"></i>
                        </div>
                        <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-amber-500/10 to-orange-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-red-500 text-xs font-medium"></span>
                </div>

                <!-- Submit Button -->
                <div class="pt-4">
                    <button type="submit" 
                            id="submitBtn"
                            class="group relative w-full flex justify-center items-center py-4 px-6 text-lg font-bold text-white bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 rounded-xl transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
                        <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-amber-400 to-orange-500 rounded-xl blur opacity-30 group-hover:opacity-50 transition-opacity duration-300"></span>
                        <span class="relative flex items-center">
                            <i class="fas fa-paper-plane mr-3 group-hover:scale-110 transition-transform duration-300" id="submitIcon"></i>
                            <span id="submitText">Enviar instruções</span>
                        </span>
                    </button>
                </div>
            </form>

            <!-- Instructions -->
            <div class="mt-6 p-4 bg-blue-50/50 rounded-xl border border-blue-100">
                <div class="flex items-start space-x-3">
                    <div class="flex-shrink-0">
                        <i class="fas fa-info-circle text-blue-500 text-lg mt-0.5"></i>
                    </div>
                    <div class="text-sm text-slate-700">
                        <p class="font-medium text-blue-700 mb-1">Como funciona:</p>
                        <ul class="space-y-1 text-slate-600">
                            <li>• Verifique se o email digitado está correto</li>
                            <li>• Enviamos um link seguro para seu email</li>
                            <li>• O link é válido por 24 horas</li>
                            <li>• Verifique também a pasta de spam</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Divider with Modern Style -->
            <div class="relative my-8">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-slate-200"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-4 bg-white/70 text-slate-500 font-medium">ou</span>
                </div>
            </div>

            <!-- Back to Login -->
            <div class="text-center">
                <a asp-page="./Login" 
                   class="group inline-flex items-center px-6 py-3 text-sm font-semibold text-slate-700 bg-white/50 border border-slate-200 rounded-xl hover:bg-white/70 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-300">
                    <i class="fas fa-arrow-left mr-2 group-hover:transform group-hover:-translate-x-1 transition-transform duration-300"></i>
                    <span>Voltar ao login</span>
                </a>
            </div>
        </div>

        <!-- Back to Home Link -->
        <div class="text-center animate-fade-in">
            <a asp-area="" asp-controller="Home" asp-action="Index" 
               class="inline-flex items-center text-sm text-slate-600 hover:text-blue-600 transition-colors duration-200 group">
                <i class="fas fa-home mr-2 group-hover:scale-110 transition-transform duration-200"></i>
                <span>Voltar ao início</span>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form submission with loading state
            const form = document.getElementById('forgotPasswordForm');
            const submitBtn = document.getElementById('submitBtn');
            const submitIcon = document.getElementById('submitIcon');
            const submitText = document.getElementById('submitText');

            if (form) {
                form.addEventListener('submit', function(e) {
                    submitBtn.disabled = true;
                    submitIcon.className = 'fas fa-spinner fa-spin mr-3';
                    submitText.textContent = 'Enviando...';
                    submitBtn.classList.add('opacity-75');
                });
            }

            // Show validation summary if there are errors
            const validationSummary = document.querySelector('[asp-validation-summary]');
            if (validationSummary && validationSummary.querySelector('li')) {
                document.getElementById('validation-summary').classList.remove('hidden');
            }

            // Enhanced form animations
            const emailInput = document.querySelector('input[type="email"]');
            if (emailInput) {
                emailInput.addEventListener('focus', function() {
                    this.closest('.group').classList.add('ring-2', 'ring-amber-500/20');
                });
                
                emailInput.addEventListener('blur', function() {
                    this.closest('.group').classList.remove('ring-2', 'ring-amber-500/20');
                });
            }
        });
    </script>
}