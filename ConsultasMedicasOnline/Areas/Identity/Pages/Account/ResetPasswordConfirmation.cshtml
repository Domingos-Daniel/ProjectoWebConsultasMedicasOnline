@page
@model ConsultasMedicasOnline.Areas.Identity.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Senha redefinida - MedConsulta";
}

<!-- Main Container with Glass Effect Background -->
<div class="min-h-screen pt-24 pb-12 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- Header Section with Success Design -->
        <div class="text-center animate-fade-in">
            <div class="flex justify-center mb-6">
                <div class="relative group">
                    <div class="w-20 h-20 bg-gradient-to-r from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center shadow-xl group-hover:shadow-2xl transition-all duration-300 transform group-hover:scale-105">
                        <i class="fas fa-check-circle text-white text-3xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-r from-green-400 to-emerald-500 rounded-2xl blur opacity-30 group-hover:opacity-50 transition-opacity duration-300"></div>
                </div>
            </div>
            <h1 class="text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-slate-800 to-slate-600 mb-3">
                Senha redefinida!
            </h1>
            <p class="text-lg text-slate-600 max-w-sm mx-auto">
                Sua senha foi alterada com sucesso. Agora você pode fazer login com sua nova senha.
            </p>
        </div>

        <!-- Success Card with Glass Morphism -->
        <div class="bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-8 animate-fade-in">
            <!-- Success Message -->
            <div class="text-center space-y-6">
                <div class="p-4 bg-green-50/50 rounded-xl border border-green-100">
                    <div class="flex items-center justify-center space-x-3">
                        <i class="fas fa-shield-check text-green-500 text-xl"></i>
                        <p class="text-green-700 font-semibold">Sua conta está protegida</p>
                    </div>
                </div>

                <!-- Next Steps -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-slate-800 flex items-center justify-center">
                        <i class="fas fa-list-check text-blue-500 mr-2"></i>
                        Próximos passos
                    </h3>
                    
                    <div class="space-y-3 text-left">
                        <div class="flex items-start space-x-3 p-3 bg-blue-50/50 rounded-lg border border-blue-100">
                            <div class="flex-shrink-0 w-6 h-6 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold">1</div>
                            <p class="text-slate-700 text-sm">
                                <span class="font-semibold">Faça login</span> com sua nova senha
                            </p>
                        </div>
                        
                        <div class="flex items-start space-x-3 p-3 bg-purple-50/50 rounded-lg border border-purple-100">
                            <div class="flex-shrink-0 w-6 h-6 bg-purple-500 text-white rounded-full flex items-center justify-center text-sm font-bold">2</div>
                            <p class="text-slate-700 text-sm">
                                <span class="font-semibold">Anote</span> sua nova senha em local seguro
                            </p>
                        </div>
                        
                        <div class="flex items-start space-x-3 p-3 bg-amber-50/50 rounded-lg border border-amber-100">
                            <div class="flex-shrink-0 w-6 h-6 bg-amber-500 text-white rounded-full flex items-center justify-center text-sm font-bold">3</div>
                            <p class="text-slate-700 text-sm">
                                <span class="font-semibold">Configure</span> autenticação de dois fatores (recomendado)
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Login Button -->
                <div class="pt-4">
                    <a asp-page="./Login" 
                       class="group relative w-full flex justify-center items-center py-4 px-6 text-lg font-bold text-white bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 rounded-xl transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-green-400 to-emerald-500 rounded-xl blur opacity-30 group-hover:opacity-50 transition-opacity duration-300"></span>
                        <span class="relative flex items-center">
                            <i class="fas fa-sign-in-alt mr-3 group-hover:scale-110 transition-transform duration-300"></i>
                            <span>Fazer login agora</span>
                        </span>
                    </a>
                </div>
            </div>

            <!-- Security Tips -->
            <div class="mt-6 p-4 bg-slate-50/50 rounded-xl border border-slate-100">
                <div class="flex items-start space-x-3">
                    <div class="flex-shrink-0">
                        <i class="fas fa-lightbulb text-amber-500 text-lg mt-0.5"></i>
                    </div>
                    <div class="text-sm text-slate-700">
                        <p class="font-medium text-slate-800 mb-1">Dicas de segurança:</p>
                        <ul class="space-y-1 text-slate-600">
                            <li>• Use uma senha única e forte</li>
                            <li>• Não compartilhe sua senha com ninguém</li>
                            <li>• Faça logout ao usar computadores públicos</li>
                            <li>• Mantenha seu email seguro</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Back to Home Link -->
        <div class="text-center animate-fade-in">
            <a asp-area="" asp-controller="Home" asp-action="Index" 
               class="inline-flex items-center text-sm text-slate-600 hover:text-blue-600 transition-colors duration-200 group">
                <i class="fas fa-home mr-2 group-hover:scale-110 transition-transform duration-200"></i>
                <span>Voltar ao início</span>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus on login button after 3 seconds
            setTimeout(function() {
                const loginButton = document.querySelector('a[asp-page="./Login"]');
                if (loginButton) {
                    loginButton.focus();
                }
            }, 3000);

            // Add celebration animation
            const successIcon = document.querySelector('.fa-check-circle');
            if (successIcon) {
                setTimeout(function() {
                    successIcon.classList.add('animate-bounce');
                    setTimeout(function() {
                        successIcon.classList.remove('animate-bounce');
                    }, 2000);
                }, 500);
            }
        });
    </script>
}
