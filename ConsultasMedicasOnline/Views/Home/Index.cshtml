@{
    ViewData["Title"] = "MedConsulta - Sua Saúde em Primeiro Lugar";
}

<!-- Hero Section with Animated Background -->
<section class="relative min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0">
        <div class="absolute top-10 left-10 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse"></div>
        <div class="absolute top-32 right-10 w-96 h-96 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
        <div class="absolute bottom-10 left-1/2 w-80 h-80 bg-pink-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse" style="animation-delay: 4s;"></div>
    </div>
    
    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center">
            <!-- Logo/Brand -->
            <div class="mb-8">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-blue-400 to-purple-500 rounded-2xl mb-4 shadow-2xl">
                    <i class="fas fa-heartbeat text-white text-3xl"></i>
                </div>
                <h1 class="text-6xl md:text-8xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 mb-6 leading-tight">
                    MedConsulta
                </h1>
            </div>
            
            <!-- Main Headline -->
            <h2 class="text-4xl md:text-6xl font-bold text-white mb-8 leading-tight">
                O futuro da medicina
                <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">
                    está aqui
                </span>
            </h2>
            
            <!-- Subtitle -->
            <p class="text-xl md:text-2xl text-blue-100 mb-12 max-w-4xl mx-auto leading-relaxed">
                Conectamos você aos melhores profissionais de saúde através de uma plataforma moderna, 
                segura e intuitiva. Cuide da sua saúde com a tecnologia mais avançada.
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-16">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Consultas" asp-action="Create" 
                       class="group relative inline-flex items-center justify-center px-10 py-4 text-lg font-bold text-white transition-all duration-300 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl hover:from-blue-600 hover:to-purple-700 transform hover:scale-105 hover:shadow-2xl">
                        <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-blue-400 to-purple-500 rounded-2xl blur opacity-30 group-hover:opacity-50 transition-opacity"></span>
                        <span class="relative flex items-center">
                            <i class="fas fa-calendar-plus mr-3"></i>
                            Agendar Consulta
                        </span>
                    </a>
                    <a asp-controller="Consultas" asp-action="Index" 
                       class="group inline-flex items-center justify-center px-10 py-4 text-lg font-bold text-blue-300 border-2 border-blue-300 rounded-2xl hover:bg-blue-300 hover:text-slate-900 transition-all duration-300 transform hover:scale-105">
                        <i class="fas fa-list mr-3"></i>
                        Minhas Consultas
                    </a>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Register" 
                       class="group relative inline-flex items-center justify-center px-12 py-5 text-xl font-bold text-white transition-all duration-300 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl hover:from-blue-600 hover:to-purple-700 transform hover:scale-105 hover:shadow-2xl">
                        <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-blue-400 to-purple-500 rounded-2xl blur opacity-30 group-hover:opacity-50 transition-opacity"></span>
                        <span class="relative flex items-center">
                            <i class="fas fa-user-plus mr-3"></i>
                            Criar Conta Grátis
                        </span>
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Login" 
                       class="group inline-flex items-center justify-center px-12 py-5 text-xl font-bold text-blue-300 border-2 border-blue-300 rounded-2xl hover:bg-blue-300 hover:text-slate-900 transition-all duration-300 transform hover:scale-105">
                        <i class="fas fa-sign-in-alt mr-3"></i>
                        Já tenho conta
                    </a>
                }
            </div>
            
            <!-- Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
                <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
                    <div class="text-4xl font-bold text-blue-400 mb-2">1000+</div>
                    <div class="text-blue-100">Médicos Especialistas</div>
                </div>
                <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
                    <div class="text-4xl font-bold text-purple-400 mb-2">50k+</div>
                    <div class="text-blue-100">Consultas Realizadas</div>
                </div>
                <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
                    <div class="text-4xl font-bold text-pink-400 mb-2">24/7</div>
                    <div class="text-blue-100">Atendimento Online</div>
                </div>
            </div>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
            <div class="w-6 h-10 border-2 border-blue-300 rounded-full flex justify-center">
