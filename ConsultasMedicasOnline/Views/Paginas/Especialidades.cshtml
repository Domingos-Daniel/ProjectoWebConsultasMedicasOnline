@{
    ViewData["Title"] = "Especialidades - MedConsulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Especialidades Page -->
<div class="min-h-screen pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Hero Section -->
        <div class="text-center mb-16 animate-fade-in">
            <div class="flex justify-center mb-8">
                <div class="relative group">
                    <div class="w-20 h-20 bg-gradient-to-r from-purple-500 to-pink-600 rounded-3xl flex items-center justify-center shadow-2xl group-hover:shadow-3xl transition-all duration-300 transform group-hover:scale-105">
                        <i class="fas fa-stethoscope text-white text-3xl group-hover:scale-110 transition-transform duration-300"></i>
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-r from-purple-400 to-pink-500 rounded-3xl blur opacity-30 group-hover:opacity-50 transition-opacity duration-300"></div>
                </div>
            </div>
            <h1 class="text-5xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-slate-800 to-slate-600 mb-6">
                Especialidades Médicas
            </h1>
            <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
                Encontre os melhores profissionais em mais de 50 especialidades médicas. 
                Todos verificados e qualificados para oferecer o melhor atendimento.
            </p>
        </div>

        <!-- Filtro de Busca -->
        <div class="bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-8 mb-12 animate-fade-in">
            <div class="max-w-2xl mx-auto">
                <h2 class="text-2xl font-bold text-center text-slate-800 mb-6">
                    Buscar por Especialidade
                </h2>
                <div class="relative">
                    <input type="text" 
                           id="searchSpecialty"
                           placeholder="Digite o nome da especialidade..." 
                           class="w-full px-6 py-4 bg-white/50 border border-slate-200 rounded-2xl focus:outline-none focus:ring-4 focus:ring-purple-100 focus:border-purple-500 transition-all duration-300 text-slate-700 placeholder-slate-400 text-lg">
                    <div class="absolute inset-y-0 right-0 pr-6 flex items-center">
                        <i class="fas fa-search text-slate-400"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grid de Especialidades -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-20" id="specialtiesGrid">
            <!-- Cardiologia -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-red-500 to-pink-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-heartbeat text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Cardiologia</h3>
                <p class="text-slate-600 text-sm mb-4">Cuidados especializados para o coração e sistema cardiovascular</p>
                <div class="text-blue-600 font-medium text-sm">124 médicos disponíveis</div>
            </div>

            <!-- Dermatologia -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-red-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-hand-paper text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Dermatologia</h3>
                <p class="text-slate-600 text-sm mb-4">Tratamento de doenças da pele, cabelos e unhas</p>
                <div class="text-blue-600 font-medium text-sm">89 médicos disponíveis</div>
            </div>

            <!-- Pediatria -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-teal-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-baby text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Pediatria</h3>
                <p class="text-slate-600 text-sm mb-4">Cuidados médicos especializados para crianças e adolescentes</p>
                <div class="text-blue-600 font-medium text-sm">156 médicos disponíveis</div>
            </div>

            <!-- Ginecologia -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-pink-500 to-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-venus text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Ginecologia</h3>
                <p class="text-slate-600 text-sm mb-4">Saúde feminina, reprodução e bem-estar da mulher</p>
                <div class="text-blue-600 font-medium text-sm">98 médicos disponíveis</div>
            </div>

            <!-- Ortopedia -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-bone text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Ortopedia</h3>
                <p class="text-slate-600 text-sm mb-4">Tratamento de problemas nos ossos, músculos e articulações</p>
                <div class="text-blue-600 font-medium text-sm">76 médicos disponíveis</div>
            </div>

            <!-- Oftalmologia -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-teal-500 to-cyan-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-eye text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Oftalmologia</h3>
                <p class="text-slate-600 text-sm mb-4">Cuidados especializados para os olhos e visão</p>
                <div class="text-blue-600 font-medium text-sm">67 médicos disponíveis</div>
            </div>

            <!-- Neurologia -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-blue-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-brain text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Neurologia</h3>
                <p class="text-slate-600 text-sm mb-4">Diagnóstico e tratamento de doenças do sistema nervoso</p>
                <div class="text-blue-600 font-medium text-sm">45 médicos disponíveis</div>
            </div>

            <!-- Psiquiatria -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-head-side-virus text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Psiquiatria</h3>
                <p class="text-slate-600 text-sm mb-4">Cuidados com a saúde mental e transtornos psiquiátricos</p>
                <div class="text-blue-600 font-medium text-sm">52 médicos disponíveis</div>
            </div>

            <!-- Clínica Geral -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-gray-500 to-slate-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-user-md text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Clínica Geral</h3>
                <p class="text-slate-600 text-sm mb-4">Atendimento médico geral e cuidados preventivos</p>
                <div class="text-blue-600 font-medium text-sm">203 médicos disponíveis</div>
            </div>

            <!-- Urologia -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-mars text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Urologia</h3>
                <p class="text-slate-600 text-sm mb-4">Tratamento do sistema urinário e reprodutor masculino</p>
                <div class="text-blue-600 font-medium text-sm">38 médicos disponíveis</div>
            </div>

            <!-- Endocrinologia -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-dna text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Endocrinologia</h3>
                <p class="text-slate-600 text-sm mb-4">Tratamento de distúrbios hormonais e metabólicos</p>
                <div class="text-blue-600 font-medium text-sm">41 médicos disponíveis</div>
            </div>

            <!-- Gastroenterologia -->
            <div class="specialty-card bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-6 text-center animate-fade-in hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="w-16 h-16 bg-gradient-to-r from-emerald-500 to-green-500 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-prescription-bottle text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-800 mb-2">Gastroenterologia</h3>
                <p class="text-slate-600 text-sm mb-4">Cuidados com o sistema digestivo e doenças gastrintestinais</p>
                <div class="text-blue-600 font-medium text-sm">35 médicos disponíveis</div>
            </div>
        </div>

        <!-- Especialidades Mais Procuradas -->
        <div class="mb-20">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-6">
                    Mais Procuradas
                </h2>
                <div class="w-24 h-1 bg-gradient-to-r from-purple-500 to-pink-600 mx-auto rounded-full"></div>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-3xl p-6 text-white text-center transform hover:scale-105 transition-all duration-300 cursor-pointer">
                    <div class="text-3xl font-bold mb-2">1º</div>
                    <div class="text-lg font-medium">Clínica Geral</div>
                    <div class="text-sm opacity-90">203 médicos</div>
                </div>

                <div class="bg-gradient-to-r from-purple-500 to-pink-600 rounded-3xl p-6 text-white text-center transform hover:scale-105 transition-all duration-300 cursor-pointer">
                    <div class="text-3xl font-bold mb-2">2º</div>
                    <div class="text-lg font-medium">Pediatria</div>
                    <div class="text-sm opacity-90">156 médicos</div>
                </div>

                <div class="bg-gradient-to-r from-pink-500 to-red-600 rounded-3xl p-6 text-white text-center transform hover:scale-105 transition-all duration-300 cursor-pointer">
                    <div class="text-3xl font-bold mb-2">3º</div>
                    <div class="text-lg font-medium">Cardiologia</div>
                    <div class="text-sm opacity-90">124 médicos</div>
                </div>

                <div class="bg-gradient-to-r from-green-500 to-teal-600 rounded-3xl p-6 text-white text-center transform hover:scale-105 transition-all duration-300 cursor-pointer">
                    <div class="text-3xl font-bold mb-2">4º</div>
                    <div class="text-lg font-medium">Ginecologia</div>
                    <div class="text-sm opacity-90">98 médicos</div>
                </div>
            </div>
        </div>

        <!-- Informações sobre Especialidades -->
        <div class="bg-white/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-12 mb-20 animate-fade-in">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 mb-8">
                    Por que escolher o MedConsulta?
                </h2>
                
                <div class="grid md:grid-cols-3 gap-8 text-left">
                    <div class="flex items-start space-x-4">
                        <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center flex-shrink-0">
                            <i class="fas fa-certificate text-white"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-slate-800 mb-2">Médicos Verificados</h3>
                            <p class="text-slate-600 text-sm">Todos os profissionais são verificados e possuem registro ativo no CRM</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-4">
                        <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-600 rounded-xl flex items-center justify-center flex-shrink-0">
                            <i class="fas fa-star text-white"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-slate-800 mb-2">Avaliações Reais</h3>
                            <p class="text-slate-600 text-sm">Sistema de avaliações verificadas de pacientes reais</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-4">
                        <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-teal-600 rounded-xl flex items-center justify-center flex-shrink-0">
                            <i class="fas fa-clock text-white"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-slate-800 mb-2">Agendamento Rápido</h3>
                            <p class="text-slate-600 text-sm">Agende em minutos e tenha confirmação imediata</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Call to Action -->
        <div class="text-center animate-fade-in">
            <div class="bg-gradient-to-r from-purple-500 to-pink-600 rounded-3xl p-12 text-white">
                <h2 class="text-3xl md:text-4xl font-bold mb-6">
                    Encontre o Especialista Ideal
                </h2>
                <p class="text-xl mb-8 opacity-90">
                    Mais de 1.200 médicos especializados estão esperando para cuidar da sua saúde.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <a asp-area="Identity" asp-page="/Account/Register" 
                       class="inline-flex items-center px-8 py-4 bg-white text-purple-600 rounded-xl font-bold text-lg hover:bg-gray-50 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                        <i class="fas fa-calendar-plus mr-3"></i>
                        Agendar Consulta
                    </a>
                    <a asp-controller="Paginas" asp-action="ComoFunciona" 
                       class="inline-flex items-center px-8 py-4 border-2 border-white text-white rounded-xl font-bold text-lg hover:bg-white hover:text-purple-600 transform hover:scale-105 transition-all duration-300">
                        <i class="fas fa-info-circle mr-3"></i>
                        Como Funciona
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchSpecialty');
            const specialtyCards = document.querySelectorAll('.specialty-card');

            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                
                specialtyCards.forEach(card => {
                    const specialtyName = card.querySelector('h3').textContent.toLowerCase();
                    const specialtyDescription = card.querySelector('p').textContent.toLowerCase();
                    
                    if (specialtyName.includes(searchTerm) || specialtyDescription.includes(searchTerm)) {
                        card.style.display = 'block';
                        card.classList.add('animate-fade-in');
                    } else {
                        card.style.display = 'none';
                    }
                });
            });

            // Add click events to specialty cards
            specialtyCards.forEach(card => {
                card.addEventListener('click', function() {
                    const specialtyName = this.querySelector('h3').textContent;
                    // Here you would typically redirect to a page showing doctors of this specialty
                    console.log('Clicked on:', specialtyName);
                    
                    // For now, let's show an alert
                    alert(`Redirecionando para médicos de ${specialtyName}...`);
                });
            });
        });
    </script>
}
