@{
    ViewData["Title"] = "Painel Administrativo";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-white py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-medical-800">
                <i class="fas fa-cog text-primary-600 mr-3"></i>
                Painel Administrativo
            </h1>
            <p class="mt-2 text-medical-600">Gerenciamento do sistema</p>
        </div>

        <!-- Message Display -->
        @if (TempData["Message"] != null)
        {
            <div class="mb-6 p-4 bg-success-50 border border-success-200 rounded-lg text-success-700">
                <i class="fas fa-check-circle mr-2"></i>
                @TempData["Message"]
            </div>
        }

        <!-- Admin Tools -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Seed Database Card -->
            <div class="bg-white rounded-xl shadow-sm border border-medical-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-medical-200 bg-primary-50">
                    <h3 class="text-lg font-semibold text-primary-800">Dados de Demonstração</h3>
                </div>
                <div class="p-6">
                    <p class="text-medical-600 mb-4">
                        Adicione médicos de demonstração para testar o agendamento de consultas.
                    </p>
                    <form asp-action="SeedDemoData" method="post">
                        <button type="submit" class="w-full bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors duration-200">
                            <i class="fas fa-database mr-2"></i>
                            Adicionar Dados de Demonstração
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
