@{
    ViewData["Title"] = "Configurações do Sistema";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Configurações do Sistema</h1>
            <p class="text-gray-600 mt-2">Configurações gerais da plataforma</p>
        </div>

        <!-- System Settings -->
        <div class="bg-white rounded-lg shadow mb-6">
            <div class="p-6 border-b">
                <h3 class="text-lg font-semibold text-gray-900">Configurações Gerais</h3>
            </div>
            <div class="p-6 space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Nome da Plataforma</label>
                        <input type="text" value="MedConsulta" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email de Contato</label>
                        <input type="email" value="contato@medconsulta.ao" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Telefone de Suporte</label>
                        <input type="tel" value="+244 000 000 000" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Fuso Horário</label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="Africa/Luanda" selected>África/Luanda (WAT)</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Consultation Settings -->
        <div class="bg-white rounded-lg shadow mb-6">
            <div class="p-6 border-b">
                <h3 class="text-lg font-semibold text-gray-900">Configurações de Consultas</h3>
            </div>
            <div class="p-6 space-y-4">
                <div class="flex items-center justify-between">
                    <div>
                        <label class="text-sm font-medium text-gray-700">Aprovação Automática</label>
                        <p class="text-sm text-gray-500">Consultas são automaticamente aprovadas sem revisão do admin</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" class="sr-only peer">
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                    </label>
                </div>
                
                <div class="flex items-center justify-between">
                    <div>
                        <label class="text-sm font-medium text-gray-700">Notificações por Email</label>
                        <p class="text-sm text-gray-500">Enviar notificações por email para consultas</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" class="sr-only peer" checked>
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                    </label>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Duração Padrão (minutos)</label>
                        <input type="number" value="30" min="15" max="120" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Antecedência Mínima (horas)</label>
                        <input type="number" value="2" min="1" max="48" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Data Management -->
        <div class="bg-white rounded-lg shadow mb-6">
            <div class="p-6 border-b">
                <h3 class="text-lg font-semibold text-gray-900">Gerenciamento de Dados</h3>
            </div>
            <div class="p-6 space-y-4">
                <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg">
                    <div>
                        <h4 class="text-sm font-medium text-blue-900">Dados de Demonstração</h4>
                        <p class="text-sm text-blue-700">Adicionar dados de exemplo para testes</p>
                    </div>
                    <form asp-action="SeedDemoData" method="post">
                        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                            <i class="fas fa-database mr-2"></i>
                            Carregar Dados
                        </button>
                    </form>
                </div>
                
                <div class="flex items-center justify-between p-4 bg-yellow-50 rounded-lg">
                    <div>
                        <h4 class="text-sm font-medium text-yellow-900">Backup do Sistema</h4>
                        <p class="text-sm text-yellow-700">Fazer backup dos dados do sistema</p>
                    </div>
                    <button class="bg-yellow-600 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors">
                        <i class="fas fa-download mr-2"></i>
                        Fazer Backup
                    </button>
                </div>
            </div>
        </div>

        <!-- Save Settings -->
        <div class="flex justify-end">
            <button class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
                <i class="fas fa-save mr-2"></i>
                Salvar Configurações
            </button>
        </div>
    </div>
</div>
