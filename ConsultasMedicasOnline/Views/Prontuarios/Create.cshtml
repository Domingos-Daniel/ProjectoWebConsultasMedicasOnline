@model ConsultasMedicasOnline.Models.Prontuario

@{
    ViewData["Title"] = "Criar Prontuário";
    
    var consulta = ViewData["Consulta"] as ConsultasMedicasOnline.Models.Consulta;
    var paciente = ViewData["Paciente"] as ConsultasMedicasOnline.Models.Paciente;
    var medico = ViewData["Medico"] as ConsultasMedicasOnline.Models.Medico;
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-white py-8">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-medical-800">
                <i class="fas fa-file-medical text-primary-600 mr-3"></i>
                Criar Prontuário Médico
            </h1>
            <p class="text-lg text-medical-600 mt-2">
                Registre as informações clínicas da consulta
            </p>
        </div>

        <!-- Patient Information Card -->
        <div class="bg-white rounded-xl shadow-sm border border-medical-200 p-6 mb-8">
            <h2 class="text-xl font-semibold text-medical-800 mb-4">
                <i class="fas fa-user text-primary-600 mr-2"></i>
                Informações do Paciente
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <p class="text-sm text-medical-600">Nome Completo</p>
                    <p class="font-semibold text-medical-800">@paciente?.Usuario?.Nome @paciente?.Usuario?.Sobrenome</p>
                </div>
                
                <div>
                    <p class="text-sm text-medical-600">Data de Nascimento</p>
                    <p class="font-semibold text-medical-800">
                        @if (paciente?.DataNascimento != null)
                        {
                            @paciente.DataNascimento.Value.ToString("dd/MM/yyyy")
                            <span class="text-sm text-medical-600 ml-2">
                                (@(DateTime.Now.Year - paciente.DataNascimento.Value.Year) anos)
                            </span>
                        }
                        else
                        {
                            <span class="text-medical-500">Não informado</span>
                        }
                    </p>
                </div>
                
                <div>
                    <p class="text-sm text-medical-600">Tipo Sanguíneo</p>
                    <p class="font-semibold text-medical-800">
                        @if (!string.IsNullOrEmpty(paciente?.TipoSanguineo))
                        {
                            @paciente.TipoSanguineo
                        }
                        else
                        {
                            <span class="text-medical-500">Não informado</span>
                        }
                    </p>
                </div>
                
                <div>
                    <p class="text-sm text-medical-600">Alergias</p>
                    <p class="font-semibold text-medical-800">
                        @if (!string.IsNullOrEmpty(paciente?.Alergias))
                        {
                            @paciente.Alergias
                        }
                        else
                        {
                            <span class="text-medical-500">Não informado</span>
                        }
                    </p>
                </div>
            </div>
            
            <div class="mt-4 bg-blue-50 p-4 rounded-lg">
                <p class="text-sm text-blue-800">
                    <i class="fas fa-calendar-check mr-2"></i>
                    Esta consulta foi realizada em <strong>@consulta?.DataHora.ToString("dd/MM/yyyy 'às' HH:mm")</strong>
                </p>
            </div>
        </div>

        <!-- Medical Record Form -->
        <form asp-action="Create" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-danger-600 mb-4 p-4 bg-danger-50 border border-danger-300 rounded-md"></div>
            
            <input type="hidden" asp-for="ConsultaId" value="@consulta.Id" />
            <input type="hidden" asp-for="PacienteId" value="@paciente.Id" />
            <input type="hidden" asp-for="MedicoId" value="@medico.Id" />
            
            <div class="bg-white rounded-xl shadow-sm border border-medical-200 p-6">
                <h3 class="text-lg font-medium text-medical-800 mb-4">Anamnese e Exame Físico</h3>
                
                <div class="space-y-4">
                    <div>
                        <label asp-for="HistoriaClinica" class="block text-sm font-medium text-medical-700 mb-1">História Clínica</label>
                        <textarea asp-for="HistoriaClinica" rows="4" class="w-full rounded-md border-medical-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200" placeholder="Descreva o histórico e queixas do paciente..."></textarea>
                    </div>
                    
                    <div>
                        <label asp-for="ExameFisico" class="block text-sm font-medium text-medical-700 mb-1">Exame Físico</label>
                        <textarea asp-for="ExameFisico" rows="4" class="w-full rounded-md border-medical-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200" placeholder="Registre os achados do exame físico..."></textarea>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-medical-200 p-6">
                <h3 class="text-lg font-medium text-medical-800 mb-4">Diagnóstico e Plano</h3>
                
                <div class="space-y-4">
                    <div>
                        <label asp-for="Hipoteses" class="block text-sm font-medium text-medical-700 mb-1">Hipóteses Diagnósticas</label>
                        <textarea asp-for="Hipoteses" rows="2" class="w-full rounded-md border-medical-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200" placeholder="Liste hipóteses consideradas..."></textarea>
                    </div>
                    
                    <div>
                        <label asp-for="Diagnostico" class="block text-sm font-medium text-medical-700 mb-1">Diagnóstico Principal</label>
                        <textarea asp-for="Diagnostico" rows="2" class="w-full rounded-md border-medical-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200" placeholder="Informe o diagnóstico principal..." required></textarea>
                        <span asp-validation-for="Diagnostico" class="text-danger-600 text-sm"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Tratamento" class="block text-sm font-medium text-medical-700 mb-1">Plano de Tratamento</label>
                        <textarea asp-for="Tratamento" rows="3" class="w-full rounded-md border-medical-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200" placeholder="Descreva o plano de tratamento proposto..."></textarea>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-medical-200 p-6">
                <h3 class="text-lg font-medium text-medical-800 mb-4">Prescrições e Orientações</h3>
                
                <div class="space-y-4">
                    <div>
                        <label asp-for="Prescricoes" class="block text-sm font-medium text-medical-700 mb-1">Prescrições</label>
                        <textarea asp-for="Prescricoes" rows="3" class="w-full rounded-md border-medical-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200" placeholder="Liste medicamentos prescritos (nome, dose, frequência, duração)..."></textarea>
                    </div>
                    
                    <div>
                        <label asp-for="ExamesSolicitados" class="block text-sm font-medium text-medical-700 mb-1">Exames Solicitados</label>
                        <textarea asp-for="ExamesSolicitados" rows="2" class="w-full rounded-md border-medical-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200" placeholder="Liste os exames complementares solicitados..."></textarea>
                    </div>
                    
                    <div>
                        <label asp-for="OrientacoesGerais" class="block text-sm font-medium text-medical-700 mb-1">Orientações Gerais</label>
                        <textarea asp-for="OrientacoesGerais" rows="3" class="w-full rounded-md border-medical-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200" placeholder="Informe as orientações adicionais ao paciente..."></textarea>
                    </div>
                    
                    <div>
                        <label asp-for="ProximaConsulta" class="block text-sm font-medium text-medical-700 mb-1">Próxima Consulta</label>
                        <input asp-for="ProximaConsulta" type="date" class="rounded-md border-medical-300 shadow-sm focus:border-primary-400 focus:ring focus:ring-primary-200">
                    </div>
                </div>
            </div>
            
            <div class="flex justify-between">
                <a href="@Url.Action("Details", "Consultas", new { id = consulta.Id })" class="bg-medical-100 text-medical-700 px-6 py-3 rounded-lg hover:bg-medical-200 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Voltar
                </a>
                
                <button type="submit" class="bg-primary-600 text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition-colors">
                    <i class="fas fa-save mr-2"></i>
                    Salvar Prontuário
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
